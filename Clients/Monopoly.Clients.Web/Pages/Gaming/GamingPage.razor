@page "/GamingPage"
@using Client.Pages.Gaming.Components
@using Client.Components

<div class="background">
    <PopupComponent @ref="Popup"/>
    <CascadingValue Value="this">
        <MapPanel
            Players="Players"/>

        <GameRound></GameRound>
        <PlayerRankList PlayerList="Players" CurrentPlayerId="@CurrentPlayerId"/>
        <ChatBox></ChatBox>

        <Settings></Settings>
        <PlayerInfo Player="_activePlayer"/>
        @if (IsYourTurn && HaveRolledDice is false)
        {
            <Go OnRolledDice="OnRolledDice"/>
        }

        <DiceBox @ref="DiceBox"/>
    </CascadingValue>
</div>